<Connexion>:
	BoxLayout
		id: login_layout
		orientation: 'vertical'
		padding: [10,50,10,50]
		spacing: 50

		Label:
			text: "Welcome"
			font_size: 32

		BoxLayout:
			orientation: "vertical"

			Label:
				text: "HÃ´te"
				font_size: 18
				halign: 'left'
				text_size: root.width-20, 20

			TextInput:
				id: host
				multiline:False
				font_size: 28

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: "Port"
				halign: "left"
				font_size: 18
				text_size: root.width-20, 20

			TextInput:
				id: port
				multiline:False
				port:True
				font_size: 28

		Button:
			text: "Connexion"
			font_size: 24

			on_press: root.do_login(host.text, port.text)

<Connected>:
	id: connectedScreen
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: "You are now connected"
			font_size: 32
		Button:
			text: "Disconnect"
			font_size: 24
			on_press: connectedScreen.disconnect()